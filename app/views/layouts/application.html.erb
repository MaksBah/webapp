<!DOCTYPE html>
<html>
  <head>
    <title>Lepotec</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
          <div class="col-4 pt-1">
            <%= link_to root_path, class: 'blog-header-logo text-dark' do %>

            <% end %>
          </div>
          <div class="col-4 d-flex justify-content-end align-items-center">

          </div>
        </div>
      </header>
      <div class="navbar">
        <%= link_to "Home", root_path %>
        <%= link_to "SignIn", new_user_session_path if !user_signed_in?%>
        <%= link_to "Register", new_user_registration_path if !user_signed_in? %>
        <%= link_to "Odjava", destroy_user_session_path, method: :delete if user_signed_in? %>
      </div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
